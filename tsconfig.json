{
  "exclude": [],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
	"compileOnSave": true,
  "compilerOptions": {
    "lib": ["ES2019"],
    "types": ["node"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types"
	],
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
		"outDir": "./build",
    "paths": {
      "./*": ["./src/*"]
    },
    "skipLibCheck": true
  }
}
